<% layout('layouts/boilerplate') %>

<style>

    body {
        background-color: #1a1a2e; 
    }

    .card {
        background: #2b2b40 !important; 
        color: #e0e0ff !important;
        border: 1px solid #3c3c58;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(106, 13, 173, 0.3); 
    }

    .form-control {
        background-color: #1f1f2f !important;
        color: #e0e0ff !important;
        border: 1px solid #3c3c58 !important;
        transition: 0.2s ease;
    }

    .form-control:focus {
        background-color: #26263a !important;
        border-color: #8a63d2 !important;
        color: #fff !important;
        box-shadow: 0 0 0 0.2rem rgba(138, 99, 210, 0.25);
    }

    label {
        color: #c6c6e8 !important;
    }

    .btn-danger {
        background-color: #6a0dad !important;
        border: none !important;
        color: #fff !important;
        transition: all 0.2s ease-in-out;
    }

    .btn-danger:hover {
        background-color: #8133d1 !important;
        transform: translateY(-2px);
    }

    .text-danger {
        color: #a366ff !important;
    }

    .text-muted {
        color: #aaaad6 !important;
    }

    a.text-danger:hover {
        text-decoration: underline;
    }
</style>

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-danger">Login</h2>
            <p class="text-muted">Welcome back!</p>
        </div>

        <!-- Flash message placeholder -->
        <%- include("../includes/flash") %>

        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label fw-semibold">Username</label>
                <input type="text" name="username" id="username" placeholder="Enter your username"
                    class="form-control rounded-3 py-2" required />
                <div class="invalid-feedback">Please enter your username</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-semibold">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter your password"
                    class="form-control rounded-3 py-2" required />
                <div class="invalid-feedback">Please enter your password</div>
            </div>

            <div class="d-grid mt-4">
                <button class="btn btn-danger rounded-3 py-2 fw-semibold">
                    Login
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small class="text-muted">
                Donâ€™t have an account?
                <a href="/signup" class="text-danger fw-semibold text-decoration-none ms-1">
                    Sign up here
                </a>
            </small>
        </div>
    </div>
</div>
