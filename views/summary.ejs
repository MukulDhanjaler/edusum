<% layout('layouts/boilerplate') %>

<div class="container mt-5 pt-4 text-light">
    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color: #a48fff;">Upload & Summarize PDF</h2>
        <p class="text-muted">Select your study material, and our AI will generate a clear and concise summary for you.</p>
    </div>

    <!-- Upload Form -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4" style="background-color: #2b2b40;">
                <form action="/summary" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="pdfFile" class="form-label fw-semibold text-light">Select PDF File</label>
                        <input class="form-control bg-dark text-light border-0" 
                            type="file" name="pdfFile" id="pdfFile" accept=".pdf" required>
                    </div>
                    <div class="d-grid">
                        <button class="btn text-white py-2" style="background-color: #6a0dad; border: none;">
                            Generate Summary
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Summary Output -->
    <% if (summary) { %>
        <div class="row justify-content-center mt-5">
            <div class="col-md-10">
                <div class="card shadow-sm border-0 p-4" style="background-color: #2b2b40;">
                    <h4 class="mb-3 fw-semibold" style="color: #b085f5;">Generated Summary</h4>
                    <p class="text-light" style="white-space: pre-line; line-height: 1.7;">
                        <%- summary %>
                    </p>
                </div>
            </div>
        </div>
    <% } %>
</div>
