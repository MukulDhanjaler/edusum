<style>
    :root {
        --primary-color: #8b5cf6;
        --primary-hover: #7c3aed;
        --text-dark: #f3f3f3;
        --bg-light: #1a1a1a;
        --shadow-light: rgba(255, 255, 255, 0.1);
    }

    /* Navbar Container */
    .navbar {
        background-color: var(--bg-light);
        box-shadow: 0 2px 8px var(--shadow-light);
        padding: 0.5rem 1rem;
    }

    /* Navbar Brand/Logo */
    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--primary-color) !important;
        transition: 0.2s ease-in-out;
    }

    .navbar-brand:hover {
        opacity: 0.85;
    }

    /* Regular Navigation Links */
    .nav-link {
        font-weight: 500;
        color: var(--text-dark);
        transition: color 0.2s ease-in-out;
    }

    .nav-link:hover {
        color: var(--primary-color) !important;
    }

    /* Active Link Styling (Optional, assumes Bootstrap 'active' class is used) */
    .nav-link.active {
        color: var(--primary-color) !important;
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 0.3rem;
    }


    /* Primary Button Style */
    .btn-main {
        background-color: var(--primary-color);
        color: var(--bg-light) !important;
        border: 1px solid var(--primary-color);
        border-radius: 50px;
        padding: 0.35rem 1.25rem;
        font-weight: 600;
        text-transform: none;
        transition: all 0.2s ease-in-out;
    }

    .btn-main:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
        color: var(--bg-light) !important;
        transform: translateY(-1px);
    }

    .btn-secondary-outline {
        background-color: transparent;
        color: var(--primary-color) !important;
        border: 1px solid var(--primary-color);
        border-radius: 50px;
        padding: 0.35rem 1.25rem;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }

    .btn-secondary-outline:hover {
        background-color: var(--primary-color);
        color: var(--bg-light) !important;
    }

    /* Disabled/Welcome Text */
    .nav-link.disabled {
        color: #f6f7f9 !important;
        /* Muted gray for disabled text */
        font-weight: 400;
    }
</style>

<nav class="navbar navbar-expand-md fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/dashboard">
            <i class="fa-solid fa-code-branch" style="font-size: 1.6rem; color: var(--primary-color);"></i>
            EDU-Summarize

        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/flashcards">Flashcards</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/quiz">Quiz</a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto">
                <% if (!currentUser) { %>
                    <li class="nav-item mx-1">
                        <a class="nav-link btn-main" href="/register">Sign Up</a>
                    </li>
                    <li class="nav-item mx-1">
                        <a class="nav-link btn-secondary-outline" href="/login">Login</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item d-flex align-items-center me-2">
                            <span class="nav-link disabled"">Hi, <%= currentUser.username %>!</span>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link btn-main" href="/logout">Sign Out</a>
                        </li>
                        <% } %>
            </ul>
        </div>
    </div>
</nav>